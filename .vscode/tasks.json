{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate and Build with csolution + cbuild",
            "type": "shell",
            "command": "cbuild ${command:cpptools.activeConfigName}.cprj",
            "problemMatcher": [
                "$gcc",
                "$armcc5",
                "$iar"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Generate Project Content with csolution"
        },
        {
            "label": "Build Project with cbuild",
            "type": "shell",
            "command": "cbuild ${command:cpptools.activeConfigName}.cprj",
            "problemMatcher": [
                "$gcc",
                "$armcc5",
                "$iar"
            ]
        },
        {
            "label": "Clean Project with cbuild",
            "type": "shell",
            "command": "cbuild ${command:cpptools.activeConfigName}.cprj -c",
            "problemMatcher": []
        },
        {
            "label": "Clean all",
            "type": "shell",
            "windows": {
                "command": [
                "cbuild ${command:cpptools.activeConfigName}.cprj -c;",
                "rm -Recurse -Force ./out;",
                "rm -Recurse -Force ./RTE;",
                "rm -Recurse -Force ./tmp;",
                "rm -Recurse -Force *.yml;",
                "rm -Recurse -Force *.cprj;",         
                ],
            },
            "linux": {
                "command": [
                "cbuild ${command:cpptools.activeConfigName}.cprj -c;",
                "rm -rf ./out;",
                "rm -rf ./RTE;",
                "rm -rf ./tmp;",
                "rm -rf *.yml;",
                "rm -rf *.cprj;",         
                ],
            },
            "problemMatcher": []
        },
        {
            "label": "Generate Project Content with csolution",
            "type": "shell",
            "command": "csolution convert -s csolution.yaml -c ${command:cpptools.activeConfigName}",
            "problemMatcher": []
        },
        {
            "label": "First time pack installation",
            "type": "shell",
            "command": [
                "cpackget init https://www.keil.com/pack/index.pidx;",
                "cpackget add https://github.com/ARM-software/CMSIS_5/releases/download/5.9.0/ARM.CMSIS.5.9.0.pack;",
                "cpackget add https://github.com/alifsemi/alif_ensemble-cmsis-dfp/releases/download/v1.1.1/AlifSemiconductor.Ensemble.1.1.1.pack;",
                "cpackget list;",
                "echo 'Pack installation has been completed'"
            ],
            "problemMatcher": []
        },
        {
            "label": "Program with Security Toolkit",
            "type": "shell",
            "windows": {
                "command": [
                    "cp ./out/${input:device}/${input:core}/${input:device}.bin $env:SETOOLS_ROOT/build/images/alif-img.bin;",
                    "cp ./.alif/m55-${input:core}_cfg.json $env:SETOOLS_ROOT/alif-img.json;",
                    "pushd $env:SETOOLS_ROOT;",
                    "./app-gen-toc -f alif-img.json;",
                    "./app-write-mram -p;",
                    "rm ./build/images/alif-img.bin;",
                    "rm ./alif-img.json;",
                    "popd"
                ]
            },
            "linux": {
                "command": [
                    "cp ./out/${input:device}/${input:core}/${input:device}.bin $SETOOLS_ROOT/build/images/alif-img.bin;",
                    "cp ./.alif/m55-${input:core}_cfg.json $SETOOLS_ROOT/alif-img.json;",
                    "pushd $SETOOLS_ROOT;",
                    "./app-gen-toc -f alif-img.json;",
                    "./app-write-mram -p;",
                    "rm ./build/images/alif-img.bin;",
                    "rm ./alif-img.json;",
                    "popd"
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "Program with Security Toolkit (select COM port)",
            "type": "shell",
            "windows": {
                "command": [
                    "cp ./out/${input:device}/${input:core}/${input:device}.bin $env:SETOOLS_ROOT/build/images/alif-img.bin;",
                    "cp ./.alif/m55-${input:core}_cfg.json $env:SETOOLS_ROOT/alif-img.json;",
                    "pushd $env:SETOOLS_ROOT;",
                    "./app-gen-toc -f alif-img.json;",
                    "./app-write-mram -p -d;",
                    "rm ./build/images/alif-img.bin;",
                    "rm ./alif-img.json;",
                    "popd"
                ]
            },
            "linux": {
                "command": [
                    "cp ./out/${input:device}/${input:core}/${input:device}.bin $SETOOLS_ROOT/build/images/alif-img.bin;",
                    "cp ./.alif/m55-${input:core}_cfg.json $SETOOLS_ROOT/alif-img.json;",
                    "pushd $SETOOLS_ROOT;",
                    "./app-gen-toc -f alif-img.json;",
                    "./app-write-mram -p -d;",
                    "rm ./build/images/alif-img.bin;",
                    "rm ./alif-img.json;",
                    "popd"
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "Update TOC with Security Toolkit",
            "type": "shell",
            "windows": {
                "command": [
                    "cp ./out/${input:device}/${input:core}/${input:device}.bin $env:SETOOLS_ROOT/build/images/alif-img.bin;",
                    "cp ./.alif/m55-${input:core}_cfg.json $env:SETOOLS_ROOT/alif-img.json;",
                    "pushd $env:SETOOLS_ROOT;",
                    "./app-gen-toc -f alif-img.json;",
                    "./app-write-mram -S;",
                    "rm ./build/images/alif-img.bin;",
                    "rm ./alif-img.json;",
                    "popd"
                ]
            },
            "linux": {
                "command": [
                    "cp ./out/${input:device}/${input:core}/${input:device}.bin $SETOOLS_ROOT/build/images/alif-img.bin;",
                    "cp ./.alif/m55-${input:core}_cfg.json $SETOOLS_ROOT/alif-img.json;",
                    "pushd $SETOOLS_ROOT;",
                    "./app-gen-toc -f alif-img.json;",
                    "./app-write-mram -S;",
                    "rm ./build/images/alif-img.bin;",
                    "rm ./alif-img.json;",
                    "popd"
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "Install debug stubs with Security Toolkit",
            "type": "shell",
            "windows": {
                "command": [
                    "pushd $env:SETOOLS_ROOT;",
                    "./app-gen-toc -f ./build/config/app-cpu-stubs.json;",
                    "./app-write-mram;",
                    "popd"
                ]
            },
            "linux": {
                "command": [
                    "pushd $SETOOLS_ROOT;",
                    "./app-gen-toc -f ./build/config/app-cpu-stubs.json;",
                    "./app-write-mram;",
                    "popd"
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "Install debug stubs with Security Toolkit (select COM port)",
            "type": "shell",
            "windows": {
                "command": [
                    "pushd $env:SETOOLS_ROOT;",
                    "./app-gen-toc -f ./build/config/app-cpu-stubs.json;",
                    "./app-write-mram -d;",
                    "popd"
                ]
            },
            "linux": {
                "command": [
                    "pushd $SETOOLS_ROOT;",
                    "./app-gen-toc -f ./build/config/app-cpu-stubs.json;",
                    "./app-write-mram -d;",
                    "popd"
                ]
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "core",
            "type": "command",
            "command": "cpptools.activeConfigCustomVariable",
            "args": "core"
        },
        {
            "id": "device",
            "type": "command",
            "command": "cpptools.activeConfigCustomVariable",
            "args": "device"
        }
    ]
}
